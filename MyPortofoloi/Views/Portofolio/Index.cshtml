@model UserDetails
@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        body{
            background-color:#f7f7f7;
        }
        .span{
            color:aqua;
            width:40%;
        }
        .social-media{
                margin: 30px 0px 30px 0px;
        }
        .social-text{
            padding-top:20px;
        }
        .about-me{
            min-height: 500px;
            background-color: white;
        }
        .about-me-txt{
            margin-top:5px;
            height:25px;
            border-bottom:1px solid #d9d9d9; 
        }
        .projects-container{
            margin-top:60px;

        }
    </style>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<h1>Portofolio</h1>
<div class="row">
    <div class="col-md-4 social-media">
        <div style = "width:52px;height:50px;border: 1px solid aqua; border-radius:30px; text-align:center;background-color:aqua;margin-left: 75px;">
        <i class="fa fa-envelope" style="margin-top:13px;font-size: 21px;"></i>
        </div>
        <div class="social-text">Email: @Model.Email</div>
    </div>
    <div class="col-md-4 social-media">
        <div style = "width:52px;height:50px;border: 1px solid aqua; border-radius:30px; text-align:center;background-color:aqua;margin-left: 60px;">
        <i class="fa fa-phone" style="margin-top:13px;font-size: 21px;"></i>
        </div>
       <div class="social-text">Phone: @Model.Phone</div> 
    </div>
    <div class="col-md-4 social-media">
        <div style = "width:52px;height:50px;border: 1px solid aqua; border-radius:30px; text-align:center;background-color:aqua;margin-left: 120px;">
        <i class="fa fa-map-marker" style="margin-top:13px;font-size: 21px;"></i>
        </div>
        <div class="social-text">Address: @Model.Address</div>
    </div>
</div>
<div class="align-content-center row" style="margin-top:15px">
   
    <div class="col-md-6 about-me">
    <div class="row">

        <div class="col-md-5 about-me-txt" style="margin-left:5px;margin-top:25px;">Name:  @Model.Name </div> 
        <div class="col-md-1"></div>
        <div class="col-md-5 about-me-txt"  style="margin-top:25px;">Surname: @Model.Surname</div>
   </div>
   <div class="row">
        <div class="col-md-5 about-me-txt" style="margin-left:5px; margin-top:25px;">Gender: @Model.Gender</div>
        <div class="col-md-1"></div>
        <div class="col-md-5 about-me-txt" style="margin-top:25px;">Birthday: @Model.BirthDate.ToString("yyyy:MM:dd")</div>
   </div>
   
    <div>
     <div class="projects-container">Projects: 
         <div class="row">

            @foreach (var item in Model.Projects)
            {
           
                    <div class="col-md-5 about-me-txt" style="margin-left:5px;margin-right:5px;margin-top:25px;">
                        @if(item.ProjectUrl=="#")
                            {
                                <span>@item.Project</span>
                            }
                            else
                            {
                                <a href="@item.ProjectUrl">@item.Project</a>
                            }   
                    </div>          
            }
         </div>
     </div>
    </div>
   </div>
