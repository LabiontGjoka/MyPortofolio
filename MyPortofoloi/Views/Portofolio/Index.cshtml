      <div class="container">
  <h2>Languages and tools I have used</h2>  
  <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 640px;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
       <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
         <li data-target="#myCarousel" data-slide-to="5"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" style="height: 240px !important;">
      <div class="item active">
        <img src="~/images/bootstrap.png" alt="Los Angeles" style="width:100%; ">
      </div>

      <div class="item">
        <img src="~/images/c.jpg" alt="Chicago" style="width:100%; ">
      </div>
    
      <div class="item">
        <img src="~/images/javascript.png" alt="New york" style="width:100%; ">
      </div>

      <div class="item">
        <img src="~/images/php.png" alt="New york" style="width:100%;">
      </div>

      <div class="item" >
        <img src="~/images/sql.png" alt="New york" style="width:100%;">
      </div>

      <div class="item">
        <img src="~/images/WordPress-Logo.png" alt="New york" style="width:100%;max-height:400px !important">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
